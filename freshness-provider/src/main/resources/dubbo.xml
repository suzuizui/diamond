<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${spring.application.name}"/>
    <dubbo:registry id="cvs-product.registry" protocol="zookeeper" address="${product.zookeeper.address}"
                    register="false" check="false" group="${cvs-product.group}"/>

    <dubbo:reference id="ShopRemote" interface="com.wormpex.cvs.product.api.remote.ShopRemote"
                     version="1.0" registry="cvs-product.registry" check="false" />
    <dubbo:reference id="ProductRemote" interface="com.wormpex.cvs.product.api.remote.ProductRemote"
                     version="1.0" registry="cvs-product.registry" check="false" />
</beans>