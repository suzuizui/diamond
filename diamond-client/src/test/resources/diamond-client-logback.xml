<?xml version="1.0" encoding="UTF-8"?>
<configuration encoding="GBK">

    <appender name="console"
        class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%date %level %msg%n%n</Pattern>
            <charset>GBK</charset>
        </encoder>
    </appender>
    
    <root>
        <level value="INFO" />
        <appender-ref ref="console" />
    </root>
</configuration>

